int button1 = 2; //push button1 attached to digital pin 2
// int button2 = 3; //push button2 attached to digital pin 3

int buttonState1 = LOW; //this variable tracks the state of button1, low if not pressed, high if pressed
// int buttonState2 = LOW; //this variable tracks the state of the button2, low if not pressed, high if pressed


void setup() {

  //set the mode of the pins...
  pinMode(button1, INPUT);
//  pinMode(button2, INPUT);

//set up the serial monitor
  Serial.begin(9600);

}


void loop() {

  //set buttonState variables to read value (high = pressed, low = not pressed) for each button
  buttonState1 = digitalRead(button1);
 // buttonState2 = digitalRead(button2);


// Send text ("1") to serial monitor when button1 is pressed
    if  (buttonState1 == HIGH) {
      Serial.println("1");
      delay(1200);    
    }


// Send text ("2") to serial monitor when button2 is pressed
 //   if (buttonState2 == HIGH) {
 //     Serial.println("2");
 //     delay(1200);   
 //   }



}
